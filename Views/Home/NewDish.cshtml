@{
    ViewData["Nav"] = 1;
    ViewData["Header"] = "Add a dish";
}
@model Dish
<form asp-action="CreateDish" asp-controller="Home" method="post" class="d-flex flex-column">
    <label asp-for="DishName"></label>
    <input asp-for="DishName">
    <span asp-validation-for="DishName"></span>
    <label asp-for="Calories"></label>
    <input asp-for="Calories">
    <span asp-validation-for="Calories"></span>
    <label asp-for="ChefId">Chef Name</label>
    <select asp-for="ChefId">
        @foreach (Chef c in ViewBag.AllChefs)
        {
            <option value=@c.ChefId>@c.FirstName @c.LastName</option>
        }
    </select>
    <span asp-validation-for="ChefId"></span>
    <label asp-for="Tastiness"></label>
    <select asp-for="Tastiness">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
    <span asp-validation-for="Tastiness"></span>
    <button type="submit" class="btn btn-info">Add a dish</button>
</form>