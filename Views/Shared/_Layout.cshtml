<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RichChefsAndDishes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RichChefsAndDishes.styles.css" asp-append-version="true" />
</head>

<body>
    <nav class="d-flex justify-content-center gap-3 mt-3">
        <a asp-action="Index" asp-controller="Home">Chefs</a>
        <span>|</span>
        <a asp-action="Dishes" asp-controller="Home">Dishes</a>
        <span>|</span>
        <a asp-action="NewChef" asp-controller="Home">Add a Chef</a>
        <span>|</span>
        <a asp-action="NewDish" asp-controller="Home">Add a Dish</a>
    </nav>
    <h1>@ViewData["Header"]</h1>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
